<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recycler_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_iv"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <TextView
            android:id="@+id/item_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_iv"
            android:layout_alignParentStart="true"
            android:paddingStart="@dimen/activity_vertical_margin"
            android:background="#6e000000"
            android:padding="6dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_iv"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginTop="7dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/item_tv_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_tv_description"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="4dp"
            android:text="200 kb" />
    </RelativeLayout>

</android.support.v7.widget.CardView>