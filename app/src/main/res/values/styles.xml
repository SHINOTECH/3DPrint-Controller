<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="ActFullScreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PopupAlphaAnime">
        <item name="android:windowEnterAnimation">@anim/alpha_show</item>
        <item name="android:windowExitAnimation">@anim/alpha_dismiss</item>
    </style>

    <style name="PopupWindowFromBottom">
        <item name="android:windowEnterAnimation">@anim/popup_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/popup_dismiss_bottom</item>
    </style>
</resources>
