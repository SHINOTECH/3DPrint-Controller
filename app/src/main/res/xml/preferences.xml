<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="网络相关"
        android:key="net_preference">
        <SwitchPreference
            android:defaultValue="false"
            android:key="auto_update"
            android:title="仅Wi-Fi下联网" />

        <SwitchPreference
            android:defaultValue="true"
            android:title="预加载STL文件"/>

        <SwitchPreference
            android:defaultValue="false"
            android:title="使用2G/3G/4G网络下载"
            android:key="download_no_wifi"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="文件相关"
        android:key="file_preference">
        <EditTextPreference
            android:title="设置缓存上限(MB)"
            android:key="cache_max"
            android:summary="@string/default_cache"/>
        <Preference
            android:title="清理缓存"
            />
        <SwitchPreference
            android:title="自动清理缓存"
            android:summary="退出应用后，自动清除所有缓存"/>
    </PreferenceCategory>

</PreferenceScreen>